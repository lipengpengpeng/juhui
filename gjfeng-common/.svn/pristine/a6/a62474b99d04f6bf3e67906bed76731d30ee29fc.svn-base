## driverClassName
jdbc.driverClassName=com.mysql.jdbc.Driver

jdbc.url=jdbc\:mysql\://localhost\:3306/gjfeng-web-mccms2?characterEncoding\=utf8&zeroDateTimeBehavior=convertToNull
jdbc.username=root
jdbc.password=123456

# database backup infos
jdbc.hostIp=localhost
jdbc.databaseName=gjfeng-web-mccms-back
jdbc.mysqlPath=E:/java/MySQL/MySQL Server 5.0/bin/mysqldump.exe
jdbc.backupPath=E\:/mybackup/database

# hibernate.X
hibernate.dialect=org.hibernate.dialect.MySQL5Dialect
hibernate.hbm2ddl.auto=none
hibernate.show_sql=false
hibernate.format_sql=false
# hibernate.cache.use_second_level_cache=false
# hibernate.cache.use_query_cache=true
hibernate.jdbc.fetch_size=1000
hibernate.jdbc.batch_size=500
hibernate.connection.autocommit=true
hibernate.connection.release_mode=auto
hibernate.current_session_content_class=org.springframework.orm.hibernate4.SpringSessionContext
javax.persistence.validation.mode=none

# c3p0
c3p0.checkoutTimeout=30000
c3p0.minPoolSize=10
c3p0.maxPoolSize=300
c3p0.maxIdleTime=300
c3p0.acquireIncrement=10

#Druid
jdbc.pool.initialSize=50
jdbc.pool.minIdle=50
jdbc.pool.maxActive=3000
jdbc.pool.maxWait=30000
jdbc.pool.timeBetweenEvictionRunsMillis=600000
jdbc.pool.minEvictableIdleTimeMillis=300000
jdbc.pool.validationQuery=select current_timestamp()
jdbc.pool.testWhileIdle=true
jdbc.pool.testOnBorrow=false
jdbc.pool.testOnReturn=false
jdbc.pool.poolPreparedStatements=true
jdbc.pool.maxPoolPreparedStatementPerConnectionSize=20