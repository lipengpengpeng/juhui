html
{
	background:#111111;
}
body
{
	font-size:12px;
	overflow:hidden;
	margin:0;
	background: #d9effa;
	width:100%;
	height:1024px;
}
#body2{
	background: url(top.jpg) no-repeat;
	width:1200px;
	height:800px;
}

#content
{
	background: url("frame.png");width:592px;height:391px;
	position: absolute;
	left:50%;
	top:50%;
	margin:-190px 0 0 -285px;
}

#roleType{
	position: absolute;left:220px;top:160px;
}

#username
{
	position: absolute;left:220px;top:185px;	
}
#password
{
	position: absolute;left:220px;top:210px;
}
#username input,#password input
{
	border:1px solid #B5B5B5;
	padding:1px;
	text-align:left;
	width:100px;
}

#checkCode
{
	position: absolute;left:220px;top:240px;
}
#random
{
	position: absolute;margin:0 0 0 2px;
}
#checkCode input
{
	border:1px solid #B5B5B5;
	width:40px;
}

#loginButton
{
	position: absolute;left:220px;top:270px;
}
#resetButton
{
	position: absolute;left:305px;top:270px;
}

#login_error
{
	position: absolute;left:220px;top:140px;
}


#loginButton input,#resetButton input
{
	background:#F7F7F7 none repeat scroll 0 0;
	border-color:#CCCCCC #CCCCCC #CCCCCC #999999;
	border-style:solid;
	border-width:1px 1px 1px 4px;
	height:22px;
	padding:3px 2px 2px;
	width:70px;
}

#copyright
{
	position: absolute;left:90px;top:350px;
	color:#000;
	padding-left:40px;
}
a:link {
	color: #0b5ba2;
	text-decoration: none;
}
a:visited {
	text-decoration: none;
	color: #0b5ba2;
}
a:hover {
	text-decoration: none;
	color: #537fb6;
}
a:active {
	text-decoration: none;
	color: #0b5ba2;
}

